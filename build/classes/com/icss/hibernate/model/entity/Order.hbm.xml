<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>

	<class name="com.icss.hibernate.model.entity.Order" table="t_order">
		<id name="id" column="c_id" type="java.lang.String" length="32">
			<generator class="uuid"/>
		</id>
		<property name="totalPrice" column="c_total_price" type="java.lang.Double" />
		<property name="createTime" column="c_create_time" type="java.util.Date" />
		<many-to-one name="user" class="com.icss.hibernate.model.entity.User" 
             column="c_user_id" cascade="all">
        </many-to-one> 
         <!--一对一映射，有外键方，unique="true" 给外键字段 添加唯一约束 -->  
      	<many-to-one class="com.icss.hibernate.model.entity.Product" unique="true" name="product"  
      		column="c_product_id" cascade="save-update">
      	</many-to-one>  
		
	</class>

</hibernate-mapping>